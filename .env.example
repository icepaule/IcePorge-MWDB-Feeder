# mwdb-feeder Configuration
# Multi-source malware aggregator for MWDB
# Copy this file to .env and fill in your values

# ============================================
# MWDB Connection
# ============================================
# Generate API key in MWDB Web UI: Settings -> API Keys -> Generate
MWDB_URL=http://mwdb:8080/api
MWDB_API_KEY=<YOUR_MWDB_API_KEY>

# ============================================
# URLhaus (abuse.ch)
# ============================================
# Register at: https://auth.abuse.ch/
URLHAUS_ENABLED=true
URLHAUS_URL=https://urlhaus-api.abuse.ch/v1/
URLHAUS_AUTH_KEY=<YOUR_ABUSE_CH_AUTH_KEY>
URLHAUS_POLL_SECONDS=300
URLHAUS_ZIP_PASSWORD=infected

# ============================================
# ThreatFox (abuse.ch)
# ============================================
# Same auth key as URLhaus (shared abuse.ch account)
THREATFOX_ENABLED=true
THREATFOX_URL=https://threatfox-api.abuse.ch/api/v1/
THREATFOX_AUTH_KEY=<YOUR_ABUSE_CH_AUTH_KEY>
THREATFOX_POLL_SECONDS=300

# ============================================
# Hybrid Analysis (Falcon Sandbox)
# ============================================
# Register at: https://www.hybrid-analysis.com/signup
# Get API key from: Profile -> API Key
HYBRID_ANALYSIS_ENABLED=true
HYBRID_ANALYSIS_API_KEY=<YOUR_HYBRID_ANALYSIS_API_KEY>
HYBRID_ANALYSIS_POLL_SECONDS=900

# ============================================
# ANY.RUN (requires paid subscription)
# ============================================
# API Key: https://app.any.run/profile -> API & Limits
# Note: Requires Searcher plan or higher for API access
ANYRUN_ENABLED=false
ANYRUN_API_KEY=<YOUR_ANYRUN_API_KEY>
ANYRUN_POLL_SECONDS=600

# ============================================
# General Settings
# ============================================
WORK_DIR=/work
STATE_DB=/work/state.db
REPORT_PATH=/work/reports/mwdb-feeder.jsonl
MAX_MB_PER_FILE=50
